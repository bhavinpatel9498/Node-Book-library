doctype html
html(lang='en')
  head
    title Admin Books List
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  body
    .container(align='center')
      .panel.panel-success
        .panel-heading(style='height: 150px;')
          h2 Books List
          button#addBookBtn.btn.btn-info(type='button', style='margin: 10px; width:200px;') Add Book
          button#requestBtn.btn.btn-info(type='button', style='margin: 10px; width:200px;') View Book Requests
          button#logoutBtn.btn.btn-info(type='button', style='margin: 10px; width:200px;') Logout
        .panel-body
          table.table.table-striped
            thead
              tr
                th(width='30%') Book Name
                th(width='20%') Author
                th(width='20%') Publisher
                th(width='15%') Version
                th(width='15%') Delete Flag
            tbody
                each book in booksList
                  tr
                    td(class='h3')
                      a(href='/admin/books/update/' + book._id)= book.bookname
                    td= book.author
                    td= book.publisher
                    td= book.version
                    td= book.deleteFlag

      form#logoutform(method='POST', action="/logout")

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

    script(type='text/javascript').
      $(document).ready(function() {

        $('#addBookBtn').bind("click",function(){
          //window.location.href = window.location.hostname+"/books";
          window.location.href = "/admin/books/add";
        });

        $('#logoutBtn').bind("click",function(){
          //window.location.href = window.location.hostname+"/books";
          $('#logoutform').submit();
        });

        $('#requestBtn').bind("click",function(){
          //window.location.href = window.location.hostname+"/books";
          window.location.href = "/admin/request";
        });


      });
